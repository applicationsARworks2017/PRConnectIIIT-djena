<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_list">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:id="@+id/iv_letterView"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="User Name"
                android:layout_toRightOf="@id/iv_letterView"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/statusonline_image"
                android:layout_alignParentRight="true"
                android:background="@drawable/online"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/statusoffline_image"
                android:layout_alignParentRight="true"
                android:background="@drawable/offline"
                />
            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUsername"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_toRightOf="@id/iv_letterView"
                android:layout_marginLeft="5dp"
                android:textColor="@color/textColorPrimary"
                android:text="User Phone"
                android:textSize="12sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_translucent"
            android:layout_below="@id/tvUserPhone"
            android:layout_marginTop="10dp">
        </LinearLayout>
        </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@+id/user_list"
             android:visibility="gone"
             android:layout_marginLeft="10dp"
             android:id="@+id/user_detaill_list">

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:text="Email"
                android:textColor="@color/textColorPrimary" />
             <TextView
                android:id="@+id/tvdesig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Designation"
                 android:singleLine="true"
                android:layout_below="@+id/tvemail"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/tvDist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:text="District"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:layout_below="@+id/tvdesig"/>

            <TextView
                android:id="@+id/tvblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Block"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="12sp"
                android:layout_below="@+id/tvDist"/>

            <TextView
                android:id="@+id/tvstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Sate"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:layout_below="@+id/tvblock"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tvstate"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:id="@+id/msgicon"
                android:background="@drawable/ic_chat_bubble_outline_black_24dp"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="@color/colorPrimary"
                 android:layout_below="@id/msgicon"
                 android:layout_marginTop="5dp">
             </LinearLayout>
         </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
