<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/for_state_userttype">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">
        <include android:id="@+id/district_list"
            android:visibility="gone"
            layout="@layout/select_user_district"/>
        <include android:id="@+id/block_list"
            android:visibility="gone"
            layout="@layout/select_user_block"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">
    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/squar_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#ff207d94"
            android:text="ALL"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/a_d_user"
        android:layout_below="@+id/all"
        android:background="@drawable/squar_background2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#7C4DFF"
            android:textStyle="bold"
            android:text="ALL DISTRICT USER"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/d_w_user"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a_d_user"
        android:background="@drawable/squar_background3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#67C2EF"
            android:text="DISTRICT WISE BLOCK USER"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/spcfc_d_user"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/d_w_user"
        android:background="@drawable/squar_background4"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#4DBD33"
            android:textStyle="bold"
            android:text="SPECIFIC DISTRICT USER"/>
    </RelativeLayout>
            <RelativeLayout
                android:id="@+id/spcfc_block_user"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/spcfc_d_user"
                android:background="@drawable/squar_background5"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="#ff30d0"
                    android:textStyle="bold"
                    android:text="SPECIFIC BLOCK USER"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/spcfc_b_user"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:visibility="gone"
                android:layout_below="@+id/spcfc_d_user"
                android:background="@drawable/squar_background5"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="#ff30d0"
                    android:textStyle="bold"
                    android:text="SPECIFIC BLOCK USER"/>
            </RelativeLayout>

