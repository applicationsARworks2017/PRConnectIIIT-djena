<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qa_list_margin"
        android:layout_marginTop="@dimen/qa_list_margin"
        android:layout_marginRight="@dimen/qa_list_margin"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvImUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="User Name"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvImdesig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Designation"
                android:layout_below="@+id/tvImUsername"
                android:textColor="@color/textColorPrimary" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tvImUsername"
                android:id="@+id/downloadicon"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_file_download_black_24dp"/>
            <TextView
                android:id="@+id/tvImtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Time"
                android:layout_below="@+id/tvImdesig"
                android:textColor="@color/textColorPrimary" />
            <TextView
                android:id="@+id/tvImaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Address"
                android:layout_below="@+id/tvImtime"
                android:textColor="@color/textColorPrimary" />
            <TextView
                android:id="@+id/tvImtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Title"
                android:layout_below="@+id/tvImaddress"
                android:textColor="@color/textColorPrimary" />
            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/tvImtitle"
                android:id="@+id/ivImage"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tvImtitle"
                android:id="@+id/vshow_frame"
                android:visibility="gone">
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:id="@+id/ivVideo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    />
            </FrameLayout>



